<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        // 변수

        // 문자,수사,기호$와_만 사용
        // 첫 글자에 숫자 X
        // 대소문자는 구별, 예약어는 사용 불가

        var 변수1 = 20;
        var 변수2 = 10;
        var 변수3 = 9;

        document.write('변수1 : ', 변수1);
        document.write('<br>');
        document.write('변수2 : ', 변수2);
        document.write('<br>');
        document.write('변수3 : ', 변수3);
        document.write('<br>');
        document.write('변수1%변수3 : ', 변수1%변수3);  // % : 나머지만 출력하는 연산
        document.write('<br>');
        document.write('변수1+변수2 : ', 변수1+변수2);
        document.write('<br>');
        document.write('변수-변수2 : ', 변수1-변수2);
        document.write('<br>');
        document.write('변수1/변수2 : ', 변수1/변수2);
        document.write('<br>');
        document.write('변수1*변수2 : ', 변수1*변수2);
        document.write('<br>');
        document.write('변수1**변수3 : ', 변수1**변수3);

        document.write('<br>');  // 줄 나누기용
        document.write('<br>');
        
        // ES6
        const 이름 = 'ㅈㄷㅂ';
        const 소속 = '대한민국';

        let 주소 = '서울'; 
        주소 = '인천';

        document.write(이름, '<br>');
        document.write(소속, '<br>');
        document.write(주소, '<br>');

        document.write(소속[2], '<br>'); // 소속의 3번째 글자 (0,1,2)    
        document.write(소속[3], '<br>'); // 소속의 4번째 글자 (0,1,2,3)
    </script>
</body>
</html>
